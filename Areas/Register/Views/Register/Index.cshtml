@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Index";
}

@model Restaurant_Management_System.Areas.Register.Models.RegisterationModel

<link rel="stylesheet" href="~/css/loginpage.css" />

<div class="login_container">
    <h1 class="register_txt mt-2">Register</h1>
    <h4 class="text-danger fs-5 ms-2">@TempData["not_found_msg"]</h4>
    <hr />
    <div class="row m-auto">
        <div class="col-md-12">
            <form asp-area="Register" asp-controller="Register" asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-check form-check-inline mt-2">
                    <input class="form-check-input" type="radio" asp-for="Role" id=" flexRadioDefault1" value="User">
                    <label class="form-check-label" asp-for="Role">
                        User
                    </label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Role" id="flexRadioDefault1" value="Admin">
                    <label class="form-check-label" asp-for="Role">
                        Admin
                    </label>
                </div>
                <div class="form-group mt-3 mb-2 w-100">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <label class="form-label login_txt">Already have an account? <a asp-area="Login" asp-controller="Login" asp-action="Index"> LogIn </a></label>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

</div>
